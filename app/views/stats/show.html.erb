<div class="table-responsive">
  <table id="cp_table" class="table table-condensed table-hover tablesorter">
    <thead>
      <tr>
        <th>Rank</th>
        <th>Pokemon</th>
        <th>CP</th>
        <th>IV</th>
        <th>Max Health</th>
        <th>Move 1</th>
        <th>Move 2</th>
        <th>ATK</th>
        <th>DEF</th>
        <th>STA</th>
        <th>Battles Attacked</th>
        <th>Battles Defended</th>
        <th># of upgrades</th>
        <th>Height</th>
        <th>Weight</th>
        <th>Number</th>
        <th>Pokeball</th>
        <th>Nickname</th>
        <th>Owner</th>
      </tr>
    </thead>
    <tbody>
      <% rank = 1 %>
      <% @pokemon_cp.each do |p| %>
        <%= render partial: 'stats/pokemon_row', locals: {:pokemon => p, :rank => rank} %>
        <% rank += 1 %>
      <% end %>
    </tbody>
  </table>
</div>
